<h1>Editing bill</h1>

<%= error_messages_for :bill %>

<% form_for(@bill) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Amount</b><br />
    <%= f.text_field :amount %>
  </p>

  <p>
    <b>Currency</b><br />
    <%= f.text_field :currency_id %>
  </p>

  <p>
    <b>Payer</b><br />
    <%= f.text_field :payer_id %>
  </p>

  <p>
    <b>Creator</b><br />
    <%= f.text_field :creator_id %>
  </p>

  <p>
    <b>Payed at</b><br />
    <%= f.datetime_select :payed_at %>
  </p>

  <p>
    <b>Created at</b><br />
    <%= f.datetime_select :created_at %>
  </p>

  <p>
    <b>Updated at</b><br />
    <%= f.datetime_select :updated_at %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @bill %> |
<%= link_to 'Back', bills_path %>
